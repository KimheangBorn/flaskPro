{% extends 'main.html.j2' %}
{% block main %}
<!-- Section: Design Block -->
<link href="/static/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
          background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
          height: 300px;
          "></div>
    <!-- Background image -->
  
    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
          margin-top: -100px;
          background: hsla(0, 0%, 100%, 0.8);
          backdrop-filter: blur(30px);
          ">
      <div class="card-body py-5 px-md-5">
  
        <div class="row d-flex justify-content-center">
          <div class="col-lg-8">
            <h2 class="fw-bold mb-5">Sign up now</h2>
            <form method="post" class="form" role="form">   
                  {% if 'csrf_token' in form %}
                  {{form.csrf_token}}
                  {% endif %}
                    <div class="d-flex justify-content-between">
                        <!-- First Name -->
                        <div>
                      {{ form.FirstName.label(class="form-label") }}
                      {% if form.FirstName.errors %}
                      {{form.FirstName(class="form-control is-invalid",required=false,minlength=false)}}
                      {% for error in form.FirstName.errors %}
                            <div class="invalid-feedback">
                                <span>{{error}}</span>
                            </div>
                        {% endfor %}
                    {% else %}
                    {{form.FirstName(class="form-control",required=false,minlength=false)}}
                    {% endif %}
                        </div>
                        <!-- Last Name -->
                        <div>
                          {{ form.LastName.label(class="form-label") }}
                      {% if form.LastName.errors %}
                      {{form.LastName(class="form-control is-invalid",required=false,minlength=false)}}
                      {% for error in form.LastName.errors %}
                            <div class="invalid-feedback">
                                <span>{{error}}</span>
                            </div>
                        {% endfor %}
                      {% else %}
                      {{ form.LastName(class="form-control",required=false,minlength=false) }}
                      {% endif %}

                        </div>
                    </div>
                    <!-- Email -->
                    {{ form.Email.label(class="form-label text-start") }}
                    {% if form. Email.errors %}
                    {{form.Email(class="form-control is-invalid ",required=false,minlength=false)}}
                    {% for error in form.Email.errors %}
                          <div class="invalid-feedback">
                              <span>{{error}}</span>
                          </div>
                      {% endfor %}
                  {% else %}
                  {{form.Email(class="form-control",required=false,minlength=false)}}
                  {% endif %}
                    <!-- Password -->
                    {{ form.Password.label(class="form-label") }}
                    {% if form. Password.errors %}
                    {{form.Password(class="form-control is-invalid",required=false,minlength=false)}}
                    {% for error in form.Password.errors %}
                          <div class="invalid-feedback">
                              <span>{{error}}</span>
                          </div>
                      {% endfor %}
                  {% else %}
                    {{ form.Password(class="form-control",required=false,minlength=false) }}
                  {% endif %}

                    <!-- Comfirm Password -->
                    {{ form.Comfirm.label(class="form-label") }}
                    {% if form.Comfirm.errors %}
                    {{form.Comfirm(class="form-control is-invalid",required=false,minlength=false)}}
                    {% for error in form.Comfirm.errors %}
                          <div class="invalid-feedback">
                              <span>{{error}}</span>
                          </div>
                      {% endfor %}
                  {% else %}
                    {{ form.Comfirm(class="form-control",required=false,minlength=false) }}
                  {% endif %}
                    <!-- Submit -->
                    <div class="d-grid gap-2 col-3 mx-auto">
                      {{ form.Submit(class="btn btn-primary mt-4 gradient-custom-2 ") }}
                    </div>
              </form>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}