<div class="modal fade" id="DeleteTask{{task.TaskID}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
    <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Are You Sure to Delete?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
        <form method='POST' action='{{url_for("main.PostTasks",taskid=task.TaskID,str="delete",status=status)}}'>
            {% if 'csrf_token' in TForm %}
                {{TForm.csrf_token}}
            {% endif %}
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <input type="Submit" value='OK' class="btn btn-danger">
            </div>
        </form>
    </div>
</div>
</div>